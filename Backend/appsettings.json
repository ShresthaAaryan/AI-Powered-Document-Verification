{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=DocumentVerification;Username=docverify;Password=doc123;Port=5432",
    "SqliteConnection": "Data Source=DocumentVerification.db"
  },
  "JwtSettings": {
    "Secret": "your-super-secret-jwt-key-at-least-32-characters-long",
    "Issuer": "DocumentVerification.API",
    "Audience": "DocumentVerification.Client",
    "ExpiryHours": 24
  },
  "FileStorage": {
    "BasePath": "./uploads",
    "MaxFileSizeMB": 10,
    "AllowedImageTypes": [".jpg", ".jpeg", ".png", ".bmp", ".tiff"],
    "AllowedDocumentTypes": [".pdf", ".jpg", ".jpeg", ".png", ".bmp", ".tiff"]
  },
  "Tesseract": {
    "DataPath": "./tessdata",
    "Language": "nep+eng"
  },
  "ONNX": {
    "ArcFaceModelPath": "./Models/glintr100.onnx",
    "ModelVersion": "1.2.0"
  },
  "FaceMatching": {
    "SimilarityThreshold": 0.6,
    "HighConfidenceThreshold": 0.7,
    "PossibleMatchThreshold": 0.5
  },
  "AuthenticityScoring": {
    "GenuineMinScore": 80,
    "SuspiciousMinScore": 50,
    "FieldCompletenessWeight": 25,
    "FormatConsistencyWeight": 20,
    "ImageQualityWeight": 25,
    "SecurityFeaturesWeight": 20,
    "MetadataConsistencyWeight": 10
  }
}